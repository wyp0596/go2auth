# Database
DATABASE_URL="postgresql://user:pass@localhost:5432/go2auth"

# Auth.js
AUTH_SECRET="your-secret-here"
AUTH_URL="http://accounts.localtest.me:3000"

# Cookie domain for SSO (critical)
COOKIE_DOMAIN=".localtest.me"

# Region: GLOBAL or CN
REGION="GLOBAL"

# Email (Magic Link) - optional
EMAIL_SERVER="smtp://user:pass@smtp.example.com:587"
EMAIL_FROM="noreply@example.com"

# Google OAuth（https://console.cloud.google.com）
# Authorized redirect URI: http://accounts.localtest.me:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth（https://github.com/settings/developers）
# Authorization callback URL: http://accounts.localtest.me:3000/api/auth/callback/github
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ========== CN Region (REGION=CN) ==========

# Aliyun SMS (for phone OTP login)
# Mode: "legacy" (default) = dysmsapi SendSms, local verification
#       "pnvs" = dypnsapi SendSmsVerifyCode + CheckSmsVerifyCode (云端验证)
ALIYUN_SMS_MODE=""
ALIYUN_SMS_ACCESS_KEY=""
ALIYUN_SMS_SECRET=""
# Legacy mode: custom sign/template (need approval)
# PNVS mode: can use system-provided sign/template (免审核)
ALIYUN_SMS_SIGN=""
ALIYUN_SMS_TEMPLATE_ID=""

# WeChat Open Platform (for scan QR login)
# https://open.weixin.qq.com - 网站应用
# Callback URL: {NEXT_PUBLIC_ACCOUNTS_URL}/api/auth/wechat/callback
WECHAT_APPID=""
WECHAT_SECRET=""

# Public variables (exposed to browser)
NEXT_PUBLIC_ACCOUNTS_URL=""
NEXT_PUBLIC_WECHAT_APPID=""
